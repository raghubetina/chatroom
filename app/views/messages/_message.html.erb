<ul class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
  <div>
    <%= simple_format message.body %>

    <small class="text-muted">
      <%= time_ago_in_words(message.updated_at) %> ago
    </small>
  </div>

  <%= render "messages/reply_form", message: Message.new(parent: message) %>
</ul>
