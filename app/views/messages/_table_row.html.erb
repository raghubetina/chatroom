<tr>
  <td>
    <%= message.topic %>
  </td>

  <td>
    <%= message.body %>
  </td>

  <td>
    <%= message.user %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to message, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_message_url(message), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to message, method: :delete, data: { confirm: "Do you really want to delete this message?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
