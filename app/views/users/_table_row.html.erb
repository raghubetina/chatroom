<tr>
  <td>
    <%= user.username %>
  </td>

  <td>
    <%= user.memberships_count %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to user, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_user_url(user), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to user, method: :delete, data: { confirm: "Do you really want to delete this user?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
