<% was_validated = user.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(user, html: form_html_options) do |f| %>
  <div class="form-group">
    <% username_class = "form-control" %>
    <% username_was_invalid = user.errors.include?(:username) %>

    <% if was_validated %>
      <% if username_was_invalid %>
        <% username_class << " is-invalid" %>
      <% else %>
        <% username_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :username %>

    <%= f.text_field :username, class: username_class, placeholder: "Enter username" %>
    <% if username_was_invalid %>
      <% user.errors.full_messages_for(:username).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% memberships_count_class = "form-control" %>
    <% memberships_count_was_invalid = user.errors.include?(:memberships_count) %>

    <% if was_validated %>
      <% if memberships_count_was_invalid %>
        <% memberships_count_class << " is-invalid" %>
      <% else %>
        <% memberships_count_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :memberships_count %>

    <%= f.number_field :memberships_count, class: memberships_count_class, placeholder: "Enter memberships count" %>
    <% if memberships_count_was_invalid %>
      <% user.errors.full_messages_for(:memberships_count).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
