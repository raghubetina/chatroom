<tr>
  <td>
    <%= membership.user %>
  </td>

  <td>
    <%= membership.team %>
  </td>

  <td>
    <%= membership.role %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to membership, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_membership_url(membership), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to membership, method: :delete, data: { confirm: "Do you really want to delete this membership?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
