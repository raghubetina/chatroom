<div class="row justify-content-center mb-3">
  <div class="col-md-6">
    <%= render object: @room, partial: "card", as: :room %>
  </div>
</div>

<div class="row justify-content-center mb-3">
  <div class="col-md-6">
    <div class="card">
      <h2 class="card-header h4">
        New Topic
      </h2>

      <div class="card-body">
        <%= render "messages/form", message: Message.new(room: @room) %>
      </div>
    </div>
  </div>
</div>

<%= render MessageCollectionComponent.new(messages: @room.root_messages) %>
