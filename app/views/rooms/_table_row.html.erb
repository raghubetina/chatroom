<tr>
  <td>
    <%= room.name %>
  </td>

  <td>
    <%= room.anyone_can_join %>
  </td>

  <td>
    <%= room.creator %>
  </td>

  <td>
    <%= room.team %>
  </td>

  <td>
    <%= room.hidden %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to room, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_room_url(room), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to room, method: :delete, data: { confirm: "Do you really want to delete this room?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
