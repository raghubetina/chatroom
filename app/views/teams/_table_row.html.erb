<tr>
  <td>
    <%= team.name %>
  </td>

  <td>
    <%= team.rooms_count %>
  </td>

  <td>
    <%= team.memberships_count %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to team, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_team_url(team), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to team, method: :delete, data: { confirm: "Do you really want to delete this team?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
